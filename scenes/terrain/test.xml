<scene>
	<!-- Independent sample generator, 32 samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="64"/>
	</sampler>

	<!-- Use the simple point light integrator -->
    <integrator type="ao">
        <point name="position" value="250, 30, 250"/>
        <color name="energy" value="3.76e5, 3.76e5, 3.76e5"/>
    </integrator>

	<mesh type="hmap">
		<string name="filename" value="leman.exr"/>
        <float name="minh" value="0"/>
        <float name="maxh" value="1700"/>
        <float name="xratio" value ="2.62"/>
        <float name="zratio" value ="2.62"/>
		<bsdf type="diffuse"/>
	</mesh>

	<!-- Render the scene viewed by a perspective camera -->
	<camera type="perspective">
		<float name="fov" value="120"/>
		<transform name="toWorld">
			<scale value="-1,1,1"/>
			<lookat target="50, 100, 100" origin="-100, 10, -100" up="0, 1, 0"/>
		</transform>

		<integer name="height" value="600"/>
		<integer name="width" value="800"/>
	</camera>
</scene>
