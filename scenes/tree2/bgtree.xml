<scene>
    <!-- Use the simple point light integrator -->
    <boolean name="save" value="true"/>
    <integrator type="volum7"/>
    <!-- Independent sample generator, 32 samples per pixel -->
    <sampler type="independent">
        <integer name="sampleCount" value="64"/>
    </sampler>

    <camera type="perspective">
        <float name="fov" value="90"/>
        <transform name="toWorld">
            <scale value="-1,1,1"/>
            <lookat target="7, 5, 0" origin="0, 0, -40" up="0, 1, 0"/>
        </transform>

        <integer name="height" value="600"/>
        <integer name="width" value="800"/>
    </camera>


    <mesh type="lsystem">

        <transform name="toWorld">
            <translate value="0 0 0"/>
        </transform>

        <string name="config" value="assets/grammar/bgtree2.l6"/>
        <string name="controller" value="BGTree2"/>

        <float name="width_factor" value="0.75"/>
        <float name="length_factor" value="0.85"/>
        <float name="pitch_term" value="5"/>
        <float name="yaw_term" value="5"/>

        <float name="seed" value="224671"/>
        <integer name="evolutions" value="10"/>

        <bsdf type="diffuse">
            <diffusemap type="mtexture">
                <diffusemap type="uniform">
                    <color name="albedo" value="0.16 0.1 0.02"/>
                </diffusemap>
