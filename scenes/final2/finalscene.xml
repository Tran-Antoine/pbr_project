        <medium type="mvoxel">


            <color name="scattering" value="0.24 0.24 0.24"/>
            <color name="absorption" value="0.12 0.12 0.12"/>


            <medium type="voxel">
                <string name="voxel_path" value="assets/voxel/procedural/islandflowers.vdb"/>
