            <diffusemap type="mtexture">
                <diffusemap type="texture">
                    <string name="filename" value="assets/texture/trunk_texture_bright.jpg"/>
                </diffusemap>
                <diffusemap type="uniform">
                    <color name="albedo" value="2.5, 0.1, 1"/>
