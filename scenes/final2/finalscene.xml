            </medium>


            <medium type="voxel">
                <string name="voxel_path" value="assets/voxel/procedural/skyhole.vdb"/>
                <color name="scattering" value="0.065 0.065 0.065"/>
                <color name="absorption" value="0.017 0.017 0.017"/>
            </medium>

            <medium type="homogeneous">
                <color name="absorption" value="0.00015 0.00015 0.00015"/>
                <color name="scattering" value="0.0011 0.0011 0.0011"/>
                <point name="bounds_min" value="-800, 0, -2500"/>
