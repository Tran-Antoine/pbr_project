<scene>
    <integrator type="volum7">
    </integrator>

    <sampler type="independent">
        <integer name="sampleCount" value="1"/>
    </sampler>

    <camera type="perspective">
        <!-- Camera-to-world coordinate system transformation -->
        <transform name="toWorld">
            <lookat origin="0.11, 0.01, -10" target="0, 0, 0" up="0,1,0"/>
        </transform>

        <float name="fov" value="90"/>

        <integer name="width" value="768"/>
        <integer name="height" value="384"/>
    </camera>

    <!-- Volume -->
    <mesh type="medium_mesh">
        <medium type="voxel">
            <string name="voxel_path" value="assets/voxel/Cloud_02.vdb"/>
            <float name="scattering" value="0.01"/>
        </medium>
    </mesh>

    <mesh type="obj">
        <string name="filename" value="assets/shape/squarelight.obj"/>
        <transform name="toWorld">
            <scale value="50,1,50"/>
            <translate value="0,10,0"/>
        </transform>
        <emitter type="area">
            <color name="radiance" value="60 60 60"/>
        </emitter>

        <bsdf type="diffuse">
            <color name="albedo" value="0.5 0.5 0.5"/>
        </bsdf>
    </mesh>
</scene>
