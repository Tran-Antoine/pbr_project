<scene>
    <integrator type="whitted">
        <float name="radius" value="4.0"/>
        <float name="height" value="1.0"/>
    </integrator>

    <sampler type="independent">
        <integer name="sampleCount" value="4"/>
    </sampler>

    <camera type="perspective">
        <!-- Camera-to-world coordinate system transformation -->
        <transform name="toWorld">
            <lookat origin="0, 0, 0" target="1, 0, 0" up="0,1,0"/>
        </transform>

        <float name="fov" value="80"/>

        <integer name="width" value="768"/>
        <integer name="height" value="384"/>
    </camera>

    <emitter type="env">
        <string name="half1" value="left.exr"/>
        <string name="half2" value="right.exr"/>
        <float name="radius" value="4000.0"/>
        <float name="height" value="12000.0"/>
        <point name="center" value="0,0,0"/>
    </emitter>

    <mesh type="obj">
        <string name="filename" value="sphere.obj"/>
        <transform name="toWorld">
            <translate value="0,0,0"/>
        </transform>
        <bsdf type="diffuse"/>
    </mesh>

</scene>
