<scene>
    <integrator type="path_mis">
    </integrator>

    <sampler type="independent">
        <integer name="sampleCount" value="256"/>
    </sampler>

    <camera type="perspective">
        <!-- Camera-to-world coordinate system transformation -->
        <transform name="toWorld">
            <lookat origin="2, 0.5, 2" target="0, 0.5, 0" up="0,1,0"/>
        </transform>

        <float name="fov" value="60"/>

        <integer name="width" value="768"/>
        <integer name="height" value="384"/>
    </camera>

    <emitter type="env">
        <string name="half1" value="left_i.exr"/>
        <string name="half2" value="right_i.exr"/>
        <float name="radius" value="5000.0"/>
        <point name="center" value="0,0,0"/>
        <float name="intensity" value="1"/>
    </emitter>

    <mesh type="obj">
        <string name="filename" value="sphere.obj"/>
        <transform name="toWorld">
            <translate value="0,0,0"/>
        </transform>
        <bsdf type="diffuse">
            <float name="intIOR" value="1.7"/>
            <color name="kd" value="0.2 0.2 0.4"/>
            <float name="alpha" value="0.01"/>
        </bsdf>
    </mesh>

</scene>
