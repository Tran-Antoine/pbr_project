<?xml version='1.0' encoding='utf-8'?>

<scene>
	<integrator type="path_mis"/>

	<camera type="perspective">
		<float name="fov" value="27.7856"/>
		<transform name="toWorld">
			<scale value="-1,1,1"/>
			<lookat target="0, 0, 0" origin="-120, 0.4, 0" up="0, 1, 0"/>
		</transform>

		<integer name="height" value="800"/>
		<integer name="width" value="1200"/>
	</camera>

	<sampler type="independent">
		<integer name="sampleCount" value="128"/>
	</sampler>

	<mesh type="hmap">
		<transform name="toWorld">
			<rotate axis="0, 0, 1" angle="90"/>
			<rotate axis="1, 0, 0" angle="-90"/>

		</transform>

		<string name="filename" value="flat_hmap.exr"/>
		<string name="nmap" value="bumpmap.exr"/>
		<float name="bump_accentuate" value="1.5"/>
		<float name="minh" value="0"/>
		<float name="maxh" value="1"/>
		<float name="xratio" value ="0.1"/>
		<float name="zratio" value ="0.1"/>

		<bsdf type="microfacet">
			<string name="texturemap" value="brickwall.jpg"/>
			<float name="intIOR" value="1.7"/>
			<float name="alpha" value="0.2"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<transform name="toWorld">
			<!-- Any sequence of the following operations: -->
			<translate value="-120, 3, 3"/>
		</transform>
		<string name="filename" value="sphere.obj"/>

		<emitter type="area">
			<color name="radiance" value="1500 1500 1500"/>
		</emitter>
	</mesh>
</scene>
