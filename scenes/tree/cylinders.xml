<scene>
    <!-- Use the simple point light integrator -->
    <integrator type="normals"/>
    <!-- Independent sample generator, 32 samples per pixel -->
    <sampler type="independent">
        <integer name="sampleCount" value="16"/>
    </sampler>

    <mesh type="lsystem">
        <string name="premise" value="FDF"/>
        <integer name="evolutions" value="0"/>
    </mesh>

    <mesh type="hmap">
        <string name="filename" value="flat.jpg"/>

        <float name="minh" value="0"/>
        <float name="maxh" value="1"/>
        <float name="xratio" value ="1"/>
        <float name="zratio" value ="1"/>
        <bsdf type="diffuse">
            <color name="albedo" value="0.2 0.2 0.2"/>
        </bsdf>
    </mesh>

    <!-- Render the scene viewed by a perspective camera -->
    <camera type="perspective">
        <float name="fov" value="65"/>
        <transform name="toWorld">
            <scale value="-1,1,1"/>
            <lookat target="0.01, 0.6, 0.0" origin="0, 0, -0.5" up="0, 1, 0"/>
        </transform>

        <integer name="height" value="600"/>
        <integer name="width" value="800"/>
    </camera>

</scene>
